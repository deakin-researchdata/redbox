{
    "host":"${smtp.host}",
    "port":"${smtp.port}",
    "username":"",
    "password":"",
    "tls":"false",
    "ssl":"false",
    "from":"${admin.email}",
    "to": "neil.fan@deakin.edu.au",
    "subject":"New ReDBox record added: '$title'",
    "body":"Dear User $piEmail,\n\nThis is a notification of a newly created record: '$title' on $createTime. \n\n ${server.url.base}$viewId/detail/$oid \n\nCheers,\nEmailNotifier",
    "vars":[
        "$oid",
        "$title",
        "$createTime",
        "$viewId",
        "$piEmail"
    ],
    "mapping": {
        "$oid":"id",
        "$title":"dc_title",
        "$createTime":"create_timestamp",
        "$viewId":"viewId",
        "$piEmail":"locrel:rth.foaf:Person.foaf:email"
    }
}
